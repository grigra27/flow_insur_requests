# Production Environment Variables
# Copy this file to .env.prod and fill in your actual values

# Django настройки
SECRET_KEY=your-super-secret-production-key-change-this
DEBUG=False
ALLOWED_HOSTS=your-domain.com,www.your-domain.com

# База данных PostgreSQL
DB_ENGINE=django.db.backends.postgresql
DB_NAME=insurance_db
DB_USER=insurance_user
DB_PASSWORD=your-secure-database-password
DB_HOST=db
DB_PORT=5432

# Security настройки (для HTTPS)
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# Email настройки (SMTP)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Celery настройки
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Docker образ (заполняется автоматически в CI/CD)
DOCKER_IMAGE=ghcr.io/your-username/insurance-system:latest