# Staging Environment Variables
# Copy this file to .env.staging and fill in your actual values

# Django настройки
SECRET_KEY=staging-secret-key-different-from-production
DEBUG=False
ALLOWED_HOSTS=staging.your-domain.com,localhost

# База данных PostgreSQL (отдельная от продакшна)
DB_ENGINE=django.db.backends.postgresql
DB_NAME=insurance_staging
DB_USER=insurance_staging
DB_PASSWORD=staging-database-password
DB_HOST=db
DB_PORT=5432

# Security настройки (менее строгие для staging)
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False

# Email настройки (консольный вывод для staging)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# Celery настройки
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Docker образ (заполняется автоматически в CI/CD)
DOCKER_IMAGE=ghcr.io/your-username/insurance-system:staging-latest