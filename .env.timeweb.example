# Timeweb Environment Variables for HTTPS Deployment
SECRET_KEY=your-timeweb-django-secret-key-minimum-50-characters-long
DB_NAME=insflow_db
DB_USER=insflow_user
DB_PASSWORD=secure-timeweb-database-password
DB_HOST=db
DB_PORT=5432
ALLOWED_HOSTS=insflow.ru,zs.insflow.ru,insflow.tw1.su,zs.insflow.tw1.su,80.90.189.37
DOCKER_IMAGE=ghcr.io/grigra27/flow_insur_requests:timeweb-latest

# Security settings for production (HTTPS)
DEBUG=False
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# Additional HTTPS security settings
SECURE_REFERRER_POLICY=strict-origin-when-cross-origin
SECURE_CROSS_ORIGIN_OPENER_POLICY=same-origin

# Content Security Policy settings
CSP_DEFAULT_SRC='self'
CSP_SCRIPT_SRC='self' 'unsafe-inline'
CSP_STYLE_SRC='self' 'unsafe-inline'
CSP_IMG_SRC='self' data:
CSP_FONT_SRC='self'
CSP_CONNECT_SRC='self'
CSP_FRAME_ANCESTORS='none'

# Domain-specific settings for four domains
MAIN_DOMAINS=insflow.ru,insflow.tw1.su
SUBDOMAINS=zs.insflow.ru,zs.insflow.tw1.su

# Static files configuration for all domains
STATIC_URL=/static/
MEDIA_URL=/media/

# Database engine for production
DB_ENGINE=django.db.backends.postgresql